@prefix odrl: <http://www.w3.org/ns/odrl/2/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .

odrl:PolicyShape
    a sh:NodeShape ;
    sh:targetClass odrl:Policy ;
    sh:nodeKind sh:IRI ;
    sh:property [
        sh:path [ 
            sh:alternativePath ( odrl:permission odrl:prohibition ) 
        ] ;
        sh:minCount 1 ;
    ] .